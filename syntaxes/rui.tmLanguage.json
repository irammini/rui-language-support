{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Teaser RUI",
  "scopeName": "source.rui",
  "fileTypes": [
    "rui"
  ],
  "patterns": [
    {"include": "#comments"},
    {"include": "#keywords"},
    {"include": "#constants"},
    {"include": "#operators"},
    {"include": "#fstrings"},
    {"include": "#strings"},
    {"include": "#numbers"},
    {"include": "#calls"}
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.rui",
          "begin": "(;;\\*)",
          "beginCaptures": {
            "1": { "name": "comment.block.rui" }
          },
          "end": "(\\*;;)",
          "endCaptures": {
            "1": { "name": "comment.block.rui" }
          },
          "contentName": "comment.block.rui"
        },
        {
          "name": "comment.line.semicolon.rui",
          "match": ";;.*"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.rui",
          "match": "\\b(if|else|when|while|for|in|exit|break|continue|try|catch|finally|spawn|defer)\\b"
        },
        {
          "name": "storage.type.function.rui",
          "match": "\\b(fn|class)\\b"
        },
        {
          "name": "keyword.other.module.rui",
          "match": "\\bget\\b"
        },
        {
          "name": "keyword.declaration.rui",
          "match": "\\bsay\\b"
        },
        {
          "name": "variable.language.this.rui",
          "match": "\\bthis\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.rui",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.empty.rui",
          "match": "\\b(empty)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.rui",
          "match": "=|\\+\\+|--|\\+=|-=|\\*=|/=|\\*\\*=|%=|<<=|>>=|&=|\\|=|\\^="
        },
        {
          "name": "keyword.operator.comparison.rui",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.rui",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.arithmetic.rui",
          "match": "\\*\\*|\\+|\\-|\\*|/|%"
        },
        {
          "name": "keyword.operator.bitwise.rui",
          "match": "<<|>>|&|\\||\\^|~"
        },
        {
          "name": "keyword.operator.ternary.rui",
          "match": "\\?|:"
        },
        {
          "name": "punctuation.separator.comma.rui",
          "match": ","
        },
        {
          "name": "punctuation.accessor.dot.rui",
          "match": "\\."
        },
        {
          "name": "punctuation.parenthesis.rui",
          "match": "\\(|\\)"
        },
        {
          "name": "punctuation.bracket.rui",
          "match": "\\[|\\]"
        },
        {
          "name": "punctuation.brace.rui",
          "match": "\\{|\\}"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.rui",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.rui",
          "match": "\\\\."
        }
      ]
    },
    "fstrings": {
      "name": "string.interpolated.rui",
      "begin": "f\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.rui",
          "match": "\\\\."
        },
        {
          "include": "#fstring-interpolation"
        }
      ]
    },
    "fstring-interpolation": {
      "name": "meta.embedded.line.rui",
      "begin": "\\$\\{",
      "end": "\\}",
      "captures": {
        "0": {
          "name": "variable.interpolation.rui"
        },
        "1": {
          "name": "punctuation.section.embedded.begin.rui"
        },
        "3": {
          "name": "punctuation.section.embedded.end.rui"
        }
      },
      "patterns": [
        {"include": "#comments"},
        {"include": "#keywords"},
        {"include": "#constants"},
        {"include": "#operators"},
        {"include": "#fstrings"},
        {"include": "#strings"},
        {"include": "#numbers"},
        {"include": "#calls"}
      ]
    },
    "numbers": {
      "name": "constant.numeric.rui",
      "match": "\\b\\d+(\\.\\d+)?\\b"
    },
    "calls": {
      "patterns": [
        {
          "name": "entity.name.function.rui",
          "match": "(\\b[a-zA-Z_][a-zA-Z0-9_]*\\b)(?=\\s*\\()"
        }
      ]
    }
  }
}
